@model Orders

@{
    ViewBag.Title = "Orders";
}

<div class="parent-container">
    <a asp-action="OrdersPDF" asp-controller="Home">Download as PDF</a>
    <div class="child-container">
        <div class="buy-orders">
            <h2 class="title-orders">Buy Orders</h2>

            <div class="order-container">
                @foreach (var order in Model.BuyOrders)
                {
                    <div class="order-box">
                        <div class="order-title">
                            @order.StockName (@order.StockSymbol)
                        </div>
                        <div class="order-field">
                            <span class="field-label">Quantity:</span>
                            <span class="field-value">@order.Quantity</span>
                        </div>
                        <div class="order-field">
                            <span class="field-label">Price:</span>
                            <span class="field-value">$@order.Price</span>
                        </div>
                        <hr>
                        <div class="order-field">
                            <span class="field-label medium">Total Trade Amount:</span>
                            <span class="price-value"><b>$@order.TradeAmount</b></span>
                        </div>
                        <div class="order-field">
                            <span class="field-label-date">@order.DateAndTimeOfOrder</span>
                        </div>

                    </div>
                }

            </div>
        </div>

        <div class="sell-orders">
            <h2 class="title-orders">Sell Orders</h2>
            <div class="order-container">

                @foreach (var order in Model.SellOrders)
                {


                    <div class="order-box">
                        <div class="order-title">
                            @order.StockName (@order.StockSymbol)
                        </div>
                        <div class="order-field">
                            <span class="field-label">Quantity:</span>
                            <span class="field-value">@order.Quantity</span>
                        </div>
                        <div class="order-field">
                            <span class="field-label">Price:</span>
                            <span class="field-value">$@order.Price</span>
                        </div>
                        <hr>
                        <div class="order-field">
                            <span class="field-label medium">Total Trade Amount:</span>
                            <span class="price-value"><b>$@order.TradeAmount</b></span>
                        </div>
                        <div class="order-field">
                            <span class="field-label-date">@order.DateAndTimeOfOrder</span>
                        </div>
                    </div>
                }
            </div>
        </div>

    </div>
</div>








